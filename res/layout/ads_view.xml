<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btnRepost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvAdsStatus"
        android:onClick="OnRepost"
        android:text="Repost" />

    <TextView
        android:id="@+id/tvAdsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAdsCategory"
        android:layout_alignTop="@+id/ivImage"
        android:text="Title" />

    <TextView
        android:id="@+id/tvAdsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignLeft="@+id/tvAdsCategory"
        android:layout_marginBottom="24dp"
        android:text="Status" />

    <TextView
        android:id="@+id/tvAdsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvAdsStatus"
        android:layout_toRightOf="@+id/ivImage"
        android:text="Category" />

    <TextView
        android:id="@+id/tvAdDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvAdsCategory"
        android:layout_alignLeft="@+id/tvAdsCategory"
        android:text="Description" />

    <TextView
        android:id="@+id/tvAdsDateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignLeft="@+id/tvAdsStatus"
        android:text="Date Created" />

</RelativeLayout>
