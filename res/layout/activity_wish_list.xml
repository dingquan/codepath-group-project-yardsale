<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/etWishItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:ems="10" >
        
        </EditText>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etWishItem"
        android:layout_alignBottom="@+id/etWishItem"
        android:layout_toRightOf="@+id/etWishItem"
        android:layout_alignParentRight="true"
        android:onClick="AddItem"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:text="Button" />

    <ListView
        android:id="@+id/lvWishItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/etWishItem"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true" >

    </ListView>
    
</RelativeLayout>
